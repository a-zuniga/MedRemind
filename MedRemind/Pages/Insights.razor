@page "/insights"
    <h3>Insights</h3>
    <br />

    @using MedRemind.Data

    <AuthorizeView>
        <Authorized>
            <h4 class="well">Here is progress for your medications:</h4>

            <br>

            <p>Adderall IR</p>

            <div class="progress">
                <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar"
                     aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:40%">
                    40% Complete (Approx. 15 days left)
                </div>
            </div>

            <br>
            <p>Vicodin</p>

            <div class="progress">
                <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar"
                     aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:50%">
                    50% Complete (Approx. 10 days left)
                </div>
            </div>

            <br>
            <p>Zocor</p>

            <div class="progress">
                <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar"
                     aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:60%">
                    60% Complete (Approx. 5 days left)
                </div>
            </div>

            <br>
            <p>Xanax</p>

            <div class="progress">
                <div class="progress-bar progress-bar-danger progress-bar-striped" role="progressbar"
                     aria-valuenow="85" aria-valuemin="0" aria-valuemax="100" style="width:85%">
                    85% Complete (Approx. 2 days left!)
                </div>
            </div>

            <br>

            <h3 class="well">Based on your past use:</h3>
            <br />
            <br />
            <style>
                .graphs {
                    margin: auto;
                    width: 50%;
                    border: 3px solid green;
                    padding: 10px;
                }
            </style>
            <div clas="graphs">
                <img src="/Images/AM2.png" alt="Graph" asp-append-version="true" style="width:100%">
            </div>
            
            <br />
            <br />


        </Authorized>

        <NotAuthorized>
            Seems like you are not logged in! Please log in or register to access our services.
        </NotAuthorized>
    </AuthorizeView>

    @code {

    }
